<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tje.sinbaram.ReservationActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="68dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 신청"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/userNameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_boader_white_round_box"
                android:hint="예약 대표 이름"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="13sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="45dp">

            <EditText
                android:id="@+id/userPhoneNumEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_boader_white_round_box"
                android:hint="휴대폰번호 입력"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="13sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="45dp">

            <EditText
                android:id="@+id/requestEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_boader_white_round_box"
                android:hint="요청 사항"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="13sp" />


        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:text="방문 인원"
            android:textSize="15sp"
            android:textStyle="bold" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:orientation="vertical"
            android:padding="25dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예약신청 버튼을 누르시면 접수됩니다! \n변동사항이 있으면 전화로 연락주세요!"/>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/moveToStoreListBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/gray_boader_gray_round_box"
                android:text="예 약 신 청"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
